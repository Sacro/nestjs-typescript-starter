{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Yarn: Debug",
      "outputCapture": "std",
      "port": 9229,
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["start:debug"]
    },
    // {
    //   "name": "Kubernetes: Dev",
    //   "type": "cloudcode.kubernetes",
    //   "request": "launch",
    //   "skaffoldConfig": "${workspaceFolder}/skaffold.yaml",
    //   "profile": "dev",
    //   "watch": true,
    //   "cleanUp": true,
    //   "portForward": true,
    //   "imageRegistry": "registry.localhost:5000"
    // },
    {
      "name": "Kubernetes: Debug",
      "type": "cloudcode.kubernetes",
      "request": "launch",
      "skaffoldConfig": "${workspaceFolder}/skaffold.yaml",
      "profile": "debug",
      "watch": false,
      "cleanUp": true,
      "portForward": true,
      "imageRegistry": "registry.localhost:5000",
      "debug": [
        {
          "image": "nestjs",
          "sourceFileMap": {
            "${workspaceFolder}": "/app"
          }
        }
      ]
    },
    {
      "name": "Kubernetes: Debug Break",
      "type": "cloudcode.kubernetes",
      "request": "launch",
      "skaffoldConfig": "${workspaceFolder}/skaffold.yaml",
      "profile": "debug-brk",
      "watch": false,
      "cleanUp": true,
      "portForward": true,
      "imageRegistry": "registry.localhost:5000",
      "debug": [
        {
          "image": "nestjs",
          "sourceFileMap": {
            "${workspaceFolder}": "/app"
          }
        }
      ]
    },
    {
      "name": "Attach to Kubernetes Pod (NodeJS)",
      "type": "cloudcode.kubernetes",
      "request": "attach",
      "language": "Node",
      "debugPort": 9229,
      "podSelector": {
        "app": "nestjs-app"
      },
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app"
    }
  ],
  "compounds": []
}
